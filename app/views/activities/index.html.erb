<div>
  <div>
    <div>
      <%= form_for @activity, remote: true do |f| %>
        <%= f.text_field :title, placeholder: "title", class: 'col-xs-4 col-ms-4 col-md-4 col-lg-4' %>
        <!-- <%= f.text_field :activity_tag, placeholder: "activity_tag" %> -->
        <%= f.hidden_field :start_time, placeholder: "start_time" %>
        <%= f.hidden_field :end_time, placeholder: "end_time" %>
        <!-- <%= f.text_area :memo, placeholder: "memo" %> -->
        <%= f.submit class: 'btn btn-primary withripple', value: 'send' %>
        <div id="timerText">0</div>
      <% end %>
    </div>
  </div>
</div>
<div>
  <div>
    <div class="panel panel-default">
      <div class="panel-heading">history</div>
      <table class="table table-bordered table-hover">
        <thead>
          <tr>
            <th class="col-xs-1 col-ms-1 col-md-1 col-lg-1">#</th>
            <th class="col-xs-4 col-ms-4 col-md-4 col-lg-4">title</th>
            <!-- <th>description</th> -->
            <!-- <th>activity_tag</th> -->
            <th class="col-xs-3 col-ms-3 col-md-3 col-lg-3">start</th>
            <th class="col-xs-3 col-ms-3 col-md-3 col-lg-3">end</th>
          </tr>
        </thead>
        <tbody>
          <%= render partial: "activity", collection: @activities %>
        </tbody>
      </table>
    </div>
  </div>
</div>