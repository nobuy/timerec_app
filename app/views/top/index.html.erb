<div>
  <%= form_for(@activity) do |f| %>
    <div>
      <%= f.text_field :title, placeholder: "title" %>
    </div>
    <div>
      <%= f.text_area :memo, placeholder: "memo" %>
    </div>
    <div>
      <%= f.text_field :activity_tag, placeholder: "activity_tag" %>
    </div>
    <div>
      <%= f.text_field :start_time, placeholder: "start_time" %>
    </div>
    <div>
      <%= f.text_field :end_time, placeholder: "end_time" %>
    </div>
    <div>
      <ul>
        <li><%= f.submit class: 'btn btn-primary withripple', value: '送信' %></li>
      </ul>
    </div>
  <% end %>
</div>
<div>
  <table>
    <caption>記録の履歴</caption>
    <thead>
      <tr>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td>id</td>
        <td>activity_tag</td>
        <td>title</td>
        <td>start_time</td>
        <td>end_time</td>
        <td>memo</td>
      </tr>
    <% @activities.each do |activity| %>
      <tr>
        <td><%= activity.id %></td>
        <td><%= activity.activity_tag %></td>
        <td><%= activity.title %></td>
        <td><%= activity.start_time %></td>
        <td><%= activity.end_time %></td>
        <td><%= activity.memo %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>